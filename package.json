{
  "name": "node-talisman",
  "version": "1.0.0-beta.6",
  "description": "A npm package for running Thoughtwork's Talisman tool",
  "main": "./src/index.ts",
  "typesVersions": {
    ">=3.4": {
      "*": [
        "ts3.4/*"
      ]
    }
  },
  "scripts": {
    "build": "npm run check && pack build",
    "publish": "pack publish",
    "lint:scripts": "eslint \"src/**/*.{js,ts}\" \"scripts/**/*.{js,ts}\" --cache --cache-location \".cache/.eslintcache/\"",
    "lint": "npm run lint:scripts",
    "typecheck": "tsc --noEmit",
    "format": "npm run lint:scripts -- --fix",
    "format:check": "eslint --print-config .eslintrc | eslint-config-prettier-check",
    "check": "npm run lint && npm run typecheck"
  },
  "engines": {
    "node": ">=8"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pgmanutd/node-talisman.git"
  },
  "keywords": [
    "javascript",
    "typescript",
    "talisman",
    "thoughtworks",
    "SSH keys",
    "authorization tokens",
    "private keys"
  ],
  "author": "pgmanutd <prashantmanunited@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pgmanutd/node-talisman/issues"
  },
  "homepage": "https://github.com/pgmanutd/node-talisman#readme",
  "dependencies": {
    "clogy": "^1.3.3",
    "exec-sh": "^0.3.2",
    "minimist": "^1.2.0",
    "mkdirp": "^0.5.1",
    "request": "^2.88.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@pika/pack": "^0.3.7",
    "@pika/plugin-build-node": "^0.3.15",
    "@pika/plugin-build-types": "^0.3.16",
    "@pika/plugin-simple-bin": "^0.3.15",
    "@pika/plugin-standard-pkg": "^0.3.15",
    "@types/minimist": "^1.2.0",
    "@types/mkdirp": "^0.5.2",
    "@types/node": "^11.13.7",
    "@types/request": "^2.48.1",
    "@typescript-eslint/parser": "^1.7.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^2.0.0",
    "lint-staged": "^8.1.5",
    "prettier": "^1.17.0",
    "typescript": "^3.4.5"
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-standard-pkg"
      ],
      [
        "@pika/plugin-build-types",
        {
          "tsconfig": "tsconfig.types.json"
        }
      ],
      [
        "@pika/plugin-build-node",
        {
          "minNodeVersion": "8"
        }
      ],
      [
        "@pika/plugin-simple-bin",
        {
          "bin": "node-talisman"
        }
      ]
    ]
  }
}
